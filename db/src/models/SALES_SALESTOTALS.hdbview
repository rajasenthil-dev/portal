VIEW "SALES_SALESTOTALS"
AS SELECT
    MFRNR,
    SUM(AMOUNT_NETWR) AS salesTotal,
    COUNT(DISTINCT INVOICE_CREDIT_VBELN) AS uniqueInvoiceCount,
    COUNT(*) AS lineCount,
    SUM(QUANTITY_FKIMG) AS unitsTotal,
    SUM(QUANTITY_FKIMG) AS quantityTotal
FROM
"SYNSALESBYCURRENTDOC" 
GROUP BY
    MFRNR;