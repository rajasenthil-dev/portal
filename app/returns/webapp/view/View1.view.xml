<mvc:View controllerName="returns.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.f" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" xmlns:l="sap.ui.layout" xmlns:sf="sap.ui.comp.smartfilterbar" xmlns:st="sap.ui.comp.smarttable" xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" displayBlock="true">
    <App id="app">
        <f:DynamicPage id="dynamicPage" showFooter="true">
        <f:header>
			<f:DynamicPageHeader id="_IDGenDynamicPageHeader1" class="noPadding">
                <FlexBox id="_IDGenFlexBox6" width="100%" direction="Row" wrap="Wrap" justifyContent="SpaceBetween" class="headerPadding sapUiMediumMarginBottom borderBottom">
                    <HeaderContainer id="container1" scrollStep="200" height="100px">
                        <FlexBox id="_IDGenFlexBox7" alignItems="Center" height="100px">
                            <FlexBox id="_IDGenFlexBox8" alignItems="Center" height="75px" class="imgBG">
                                <Image id="logoImage" src="/img/logoipsum-325.svg" width="125px" decorative="false" press="onLogoPressed" tooltip="SAP Logo" >
                                    <layoutData>
                                        <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData1" priority="NeverOverflow"/>
                                    </layoutData>
                                </Image>
                            </FlexBox>
                        </FlexBox>  
                    </HeaderContainer>
                    <!-- <HeaderContainer id="container2" scrollStep="200">
                        <GenericTile id="_IDGenGenericTile1" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>lastRefresh}" subheader="3/22/2024 6:30:57AM" frameType="OneByHalf">
                            <TileContent id="_IDGenTileContent1" class="refreshTitle" footer="Footer Text">
                                <Text id="_IDGenText1" class="refreshText" text="3/22/2024 6:30:57AM"/>
                            </TileContent>
                        </GenericTile>
                    </HeaderContainer> -->
                </FlexBox>
				<sf:SmartFilterBar 
                    id="bar0" 
                    entitySet="RETURNS"  
                    useDateRangeType="true" 
                    persistencyKey="SmartFilterBar_RETURNS" 
                    smartVariant="pageVariant" 
                    liveMode="true" 
                    search="onSearch">
                    <sf:controlConfiguration>
                        <sf:ControlConfiguration id="_IDGenControlConfiguration1"
							key="ERDAT"
							visibleInAdvancedArea="true"
							conditionType="{
								module: 'sap.ui.comp.config.condition.DateRangeType'
							}"
						/>
                    </sf:controlConfiguration>
                    <sf:controlConfiguration>
                        <sf:ControlConfiguration id="customCurrentFilter"
                            key="CURRENT"
                            visibleInAdvancedArea="true"
                        >
                            <sf:customControl>
                                <ComboBox id="currentFilterBox" selectedKey="{filters>/currentStatus}">
                                    <items>
                                        <core:Item id="_IDGenItem2" key="" text="{i18n>RETURNS.ALLTEXT}"/>
                                        <core:Item id="_IDGenItem" key="YES" text="{i18n>RETURNS.CURRENTTEXT}"/>
                                        <core:Item id="_IDGenItem1" key="NO" text="{i18n>RETURNS.LEGACYTEXT}"/>
                                    </items>
                                </ComboBox>
                            </sf:customControl>
                        </sf:ControlConfiguration>
                    </sf:controlConfiguration>
                </sf:SmartFilterBar>
                <!--Added By Bryan Cash Removed sapMediumMarginBottom from Header Container, Added Panel with expanded=true and expandable=true and header text with app title + summary
                Changed NumericContent Component to a Text Component to better handle custom CSS added to CSS file -->
                <Panel id="panel" expandable="true" expanded="true" headerText="{i18n>panelHeader}">
                    <HeaderContainer id="container4" scrollStep="200" orientation="Horizontal" gridLayout="true" class="mck_HeaderContainer">
                        <FlexBox id="_IDGenFlexBox1" direction="Column" class="mck_Tile">
                            <Title id="_IDGenTitle1" class="mck_TileContentTitle" text="{i18n>tileTitle1}"/>
                            <Text id="summaryTile1" class="mck_TileContent" text="323"/>
                        </FlexBox>
                        <FlexBox id="_IDGenFlexBox3" direction="Column" class="mck_Tile">
                            <Title id="_IDGenTitle3" class="mck_TileContentTitle" text="{i18n>tileTitle2}"/>
                            <Text id="summaryTile2" class="mck_TileContent" text="31"/>
                        </FlexBox>  
                        <FlexBox id="_IDGenFlexBox4" direction="Column" class="mck_Tile">
                            <Title id="_IDGenTitle4" class="mck_TileContentTitle" text="{i18n>tileTitle3}"/>
                            <Text id="summaryTile3" class="mck_TileContent" text="709"/>
                        </FlexBox>  
                    </HeaderContainer>
                </Panel>
			</f:DynamicPageHeader>
		</f:header>
        <f:content>
            
            <st:SmartTable 
                xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
                width="100%" 
                direction="Column" 
                fitContainer="true" 
                tableType="Table" 
                header="{i18n>tableTitle}" 
                enableAutoBinding="true" 
                id="table0" 
                smartFilterId="bar0"
                cd:w5g.dt.context="/RETURNS" 
                entitySet="RETURNS" 
                placeToolbarInTable="true" 
                useExportToExcel="true" 
                beforeExport="onBeforeExport" 
                useVariantManagement="true" 
                useTablePersonalisation="true" 
                customData:p13nDialogSettings='{filter:{visible:false}}'
                showRowCount="true" 
                persistencyKey="SmartTableAnalytical_RETURNS"
                enableAutoColumnWidth="true" 
                class="sapUiResponsiveContentPadding">
                <t:Table id="table" 
                    selectionMode="None" 
                    alternateRowColors="true"
                    rows="{
                        path: '/RETURNS',
                        parameters: {
                            '$select': 'VBELN_VBAK,LFGSK,VBELN_VBRK,CREDIT_AMT_NETWR'
                        }
                    }"
                >
                    <t:Column id="_IDGenColumn11" width='7.813rem' hAlign="Center" sortProperty="CURRENT">
                        <t:customData>
                            <core:CustomData key="p13nData" value='\{"columnKey": "CURRENT", "leadingProperty": "CURRENT", "columnIndex": 0}'/>
                        </t:customData>
                        <Text id="_IDGenText31" text="{i18n>RETURNS.CURRENT}"></Text>
                        <t:template>
                            <ObjectStatus id="_IDGenObjectStatus"
                            core:require="{
                                    Formatter: 'returns/model/formatter'
                                }"
                                inverted="true"
                                icon="{path: 'CURRENT', formatter:'Formatter.yesNoIcon'}"
                                tooltip="{= ${CURRENT} === 'YES' ? ${i18n>RETURNS.CURRENTTOOLTIP} : ${i18n>RETURNS.LEGACYTOOLTIP}}"
                                state="{path: 'CURRENT', formatter: 'Formatter.yesNoIconColor'}"
                                text="{= ${CURRENT} === 'YES' ? ${i18n>RETURNS.CURRENTTEXT} : ${i18n>RETURNS.LEGACYTEXT}}"/>
                        </t:template>
                    </t:Column>
                    <t:columns>
                        <t:Column id="_IDGenColumn" width='7.813rem' hAlign="End" sortProperty="ERDAT">
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "ERDAT", "leadingProperty": "ERDAT", "columnIndex": 1}'/>
                            </t:customData>
                            <Text id="_IDGenText3" text="{i18n>RETURNS.ERDAT}"></Text>
                            <t:template>
                                <Text id="enteredDate" text="{path: 'ERDAT', type: 'sap.ui.model.odata.type.Date'}"/>
                            </t:template>
                        </t:Column>
                        <t:Column id="_IDGenColumn4" width='7.813rem' hAlign="End" sortProperty="CUSTOMER_KUNNR">
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "CUSTOMER_KUNNR", "leadingProperty": "CUSTOMER_KUNNR", "columnIndex": 2}'/>
                            </t:customData>
                            <Text id="_IDGenText" text="{i18n>RETURNS.CUSTOMER_KUNNR}"></Text>
                            <t:template>
                                <Text id="_IDGenText2" text="{path: 'CUSTOMER_KUNNR'}"/>
                            </t:template>
                        </t:Column>
                        <t:Column id="_IDGenColumn5" width='7.813rem' hAlign="End" sortProperty="VBELN_VBAK">
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "VBELN_VBAK", "leadingProperty": "VBELN_VBAK", "columnIndex": 5}'/>
                            </t:customData>
                            <Text id="_IDGenText6" text="{i18n>RETURNS.VBELN_VBAK}"></Text>
                            <t:template>
                                <Text id="_IDGenText7" text="{path: 'VBELN_VBAK'}"/>
                            </t:template>
                        </t:Column>
                        <t:Column id="_IDGenColumn6" width='7.813rem' hAlign="End" sortProperty="VBELN_VBRK">
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "VBELN_VBRK", "leadingProperty": "VBELN_VBRK", "columnIndex": 8}'/>
                            </t:customData>
                            <Text id="_IDGenText8" text="{i18n>RETURNS.VBELN_VBRK}"></Text>
                            <t:template>
                                <Text id="_IDGenText9" text="{path: 'VBELN_VBRK'}"/>
                            </t:template>
                        </t:Column>
                        <t:Column id="_IDGenColumn1" width='7.813rem' hAlign="End" sortProperty="FKDAT_ANA">
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "FKDAT_ANA", "leadingProperty": "FKDAT_ANA", "columnIndex": 9}'/>
                            </t:customData>
                            <Text id="_IDGenText5" text="{i18n>RETURNS.FKDAT_ANA}"></Text>
                            <t:template>
                                <Text id="creditDate" text="{path: 'FKDAT_ANA', type: 'sap.ui.model.odata.type.Date'}"/>
                            </t:template>
                        </t:Column>
                        <t:Column id="_IDGenColumn2" width='7.813rem' hAlign="End" sortProperty="CREDIT_AMT_NETWR">
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "CREDIT_AMT_NETWR", "leadingProperty": "CREDIT_AMT_NETWR", "columnIndex": 10}'/>
                            </t:customData>
                            <Text id="_IDGenText4" text="{i18n>RETURNS.CREDIT_AMT_NETWR}"></Text>
                            <t:template>
                                <Text id="creditAmount" text="{path: 'CREDIT_AMT_NETWR', formatter: '._formatCurrency'}"/>
                            </t:template>
                        </t:Column>
                        <t:Column id="_IDGenColumn7" width='7.813rem' hAlign="End" sortProperty="CO_VKORG">
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "CO_VKORG", "leadingProperty": "CO_VKORG", "columnIndex": 11}'/>
                            </t:customData>
                            <Text id="_IDGenText10" text="{i18n>RETURNS.CO_VKORG}"></Text>
                            <t:template>
                                <Text id="_IDGenText11" text="{path: 'CO_VKORG'}"/>
                            </t:template>
                        </t:Column>
                        <t:Column id="_IDGenColumn8" width='7.813rem' hAlign="End" sortProperty="MFRNR" visible="false">
                            <t:customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "MFRNR", "leadingProperty": "MFRNR", "columnIndex": 13}'/>
                            </t:customData>
                            <Text id="_IDGenText12" text="{i18n>RETURNS.MFRNR}"></Text>
                            <t:template>
                                <Text id="_IDGenText13" text="{path: 'MFRNR'}"/>
                            </t:template>
                        </t:Column>
                        
                    </t:columns>
                </t:Table>
            </st:SmartTable>
        </f:content>
        <f:footer>
            <OverflowToolbar id="_IDGenOverflowToolbar1" class="footer">
                <!-- Added by Bryan Cash in order to make the footer fully responsive for mobile devices -->                    
                <FlexBox id="_IDGenFlexBox9" width="100%" justifyContent="SpaceBetween" wrap="Wrap">
                    <FlexBox id="_IDGenFlexBox10">
                        <ObjectIdentifier id="_IDGenObjectIdentifier1"
                            title="{i18n>totals}"
                            class="footerTitle"/>
                    </FlexBox>
                    <FlexBox id="_IDGenFlexBox11" >
                        <HBox id="_IDGenHBox1" class="sapUiSmallMarginEnd">
                            <Label id="_IDGenLabel1" text="{i18n>footerLabel1}:" class="cssLabelTotal"/>
                            <Text id="TotUnitsPriceText" class="footerText" text ="${ProductCollection>/TotUnitsPrice}"/>
                        </HBox>
                    </FlexBox>
                </FlexBox>
			</OverflowToolbar>
        </f:footer>
      
	    </f:DynamicPage>
    </App>
</mvc:View>